<div class="container">
  <div class="content">
    <% if @movie['poster_path'] %>
      <%= image_tag "https://image.tmdb.org/t/p/w500#{@movie['poster_path']}", class:"image-description"%>
    <% end %>
    <div class="content-text">
      <h1><%= @movie['title'] %></h1>
      <p><%= @movie['overview'] %></p>
        <%= simple_form_for @bookmark, url: bookmarks_create_path do |f| %>
          <%= hidden_field_tag :tmdb_id, @movie["id"] %>
          <%= hidden_field_tag :title, @movie["title"] %>
          <%= hidden_field_tag :poster_path, @movie["poster_path"] %>
          <%= hidden_field_tag :overview, @movie["overview"] %>

          <%= f.input :list_id, collection: current_user.lists, label: "Choose your list" %>
          <%= f.input :rating, label: "Rating on 5", input_html: { min: 1, max: 5, step: 1 }, as: :integer %>
          <%= f.input :comment, label: "Your comment" %>

          <%= f.submit "Add to list", class: "btn" %>
        <% end %>
      </div>
    </div>


  </div>
</div>
