<div class="container">
  <h1 id="list-title">Your Lists<span id="point">.</span></h1>

  <div class="movies-cards">
    <% @lists.each do |list| %>
      <div class="movie-card">
        <%= link_to list_path(list) do %>
          <div class="movie-card-wrapper">
            <% if list.photo.attached? && list.photo.key.present? %>
              <%= cl_image_tag list.photo.key,
                    alt: list.name, class: "image_movie" %>
            <% else %>
              <div class="image placeholder"></div>
            <% end %>
            <p class="movie-card-title"><%= list.name %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <h2 id="list-subtitle">Add a list</h2>
  <div class="btn-wrapper">
    <%= link_to "+", new_list_path, class: "btn-list" %>
  </div>
</div>
