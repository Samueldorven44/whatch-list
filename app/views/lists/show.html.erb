<h1><%= @list.name %></h1>

<div class="delete-list">
    <%= link_to "Delete",
        list_path(@list),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
        class: "link-delete-list" %>
  </div>

<div class="btn-bookmark">
  <%= link_to "Ajouter un bookmark", new_list_bookmark_path(@list), class: "btn-add-bookmark" %>
</div>

<div class="btn-wrapper">
  <%= link_to "Retour", lists_path, class: "btn-back" %>
</div>
