      <%= cl_image_tag @user.photo.key, class: "image-profile-dashboard" %>
    </div>

    <div class="profile-right">
      <div class="profile-right-p1">
        <p class="title-input-profile">Age</p>
        <p><%= @user.age %> ans</p>
