        <p><%= @user.city %></p>
        <p class="title-input-profile">Bio</p>
        <p class="description-profile"><%= @user.description %></p>
      </div>

      <div class="profile-right-p2">
        <p class="title-input-profile">Phone number</p>
        <p><%= @user.phone_number %></p>
        <p class="title-input-profile">Email</p>
        <p><%= @user.email %></p>
        <p class="title-input-profile">Favorite movies</p>
        <p><%= @user.favorite_gender %></p>
      </div>
    </div>
  </div>

