<%= simple_form_for :search, url: explorer_index_path, method: :get, html: { class: 'search-form-mobile' } do |f| %>
  <div class="search-form-control form-group">
    <%= f.input :query, input_html: { class: 'form-control', placeholder: "Rechercher" }, label: false %>
    <button type="submit" class="btn-form">
      <i class="fas fa-search"></i>
    </button>
  </div>
<% end %>

<div class="movies-cards">
    <% @movies.each do |movie| %>
      <div class="movie-card">
        <%= link_to movie_path(movie['id']) do %>
          <div class="movie-card-wrapper">
            <%= image_tag("https://image.tmdb.org/t/p/w300#{movie['poster_path']}", alt: "#{movie['title']} poster", class: "image_movie") %>
            <p class="movie-card-title"><%= movie['title'] %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= paginate @movies, class: "pagination" %>
